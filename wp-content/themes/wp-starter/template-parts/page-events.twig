{% extends 'base.twig' %}


{% block content %}

	<div class="container px-6 category-archive lg:px-12">
		{% include 'breadcrumbs.twig' with { 'page': page } %}
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<section class="article-content">
				<div class="-mt-5 space-y-10 article-body md:space-y-12">
					{{ post.content }}
				</div>
			</section>
		</article>
		<div class="space-y-10 lg:space-y-12">
			<h2 class="mt-10 h1 lg:mt-12">Events</h2>
			{% if posts %}
				<div class="space-y-6 lg:grid lg:grid-cols-3 lg:gap-10 lg:space-y-0">
					{% for post in posts %}
						{% set category = post.terms('category')|first %}
						
						{% include ['tease-' ~ category.slug ~ '.twig', 'tease.twig'] %}

					{% endfor %}
				</div>
			{% else %}
				<p>No posts found.</p>
			{% endif %}
			

		</div>
	</div>
{% endblock %}
