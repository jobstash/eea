{% if post.class is not defined or post.class != 'Timber\\Post' %}
	{% set post = get_post(post) %}
{% endif %}

{% set download = post.meta('download_file') %}
<article class="tease h-full tease-{{ post.post_type }}" id="tease-{{ post.ID }}">
	{% block content %}
		<div class="flex flex-col h-full">
			<div class="mb-5 overflow-hidden aspect-w-9 aspect-h-14">
				{% if post.thumbnail %}
					<a href="{{ download.url }}" class="transition-all hover:opacity-70">
						<img loading="lazy" class="absolute inset-0 object-cover object-center w-full h-full" src="{{ post.thumbnail.src }}" srcset="{{ post.thumbnail.srcset }}" sizes="(max-width: 768px) 100vw, (max-width: 1024px) 500px" alt="{{ post.thumbnail.alt | default('Image') }}">
					</a>
				{% endif %}
			</div>
			<div class="flex flex-col space-y-5 grow">
				<h3 class="h5">
					<a href="{{ download.url }}">{{ post.title }}</a>
				</h3>
				<a href="{{ download.url }}" class="mt-5 btn-secondary">
					<span>Download</span>
					<svg fill="none" viewbox="0 0 34 35" class="w-[24px] h-[24px] ml-2 -mt-1">
						<g clip-path="url(#a)">
							<path fill="#fff" fill-rule="evenodd" d="m25.486 21.094-7.955 7.955a.75.75 0 0 1-1.06 0l-7.956-7.955a.75.75 0 1 1 1.061-1.06l6.675 6.674V7.305a.75.75 0 0 1 1.5 0v19.403l6.674-6.675a.75.75 0 0 1 1.061 1.06Z" clip-rule="evenodd"/>
						</g>
						<defs>
							<clipPath id="a">
								<path fill="#fff" d="M33.97 17.912 17 34.882.03 17.912 17 .942z"/>
							</clipPath>
						</defs>
					</svg>
				</a>
			</div>
		</div>
	{% endblock %}
</article>
