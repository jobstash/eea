					<img src="{{ image_src }}" srcset="{{ image_srcset }}" sizes="{{ image_sizes }}" alt="{{ post.post_title }}" class="block object-cover object-center">

				</div>
			{% endif %}
		</div>

		<div class="px-6 pb-8 text-center">
			<h3 class="mb-1 h5">{{ post.post_title }}</h2>
			<div class="mb-3 text-white/80 body-3">
				{{ function('get_field', 'position', post.ID) }}
			</div>
			<div class="mb-6 text-white/80 body-2">{{ post.post_content }}</div>
			<div class="flex justify-between text-white/80 space-2 body-3">
				<a href="{{ function('get_field', 'X_url', post.ID) }}" target="_blank">X url</a>
				<a href="{{ function('get_field', 'tiktok_url', post.ID) }}" target="_blank">tiktok url</a>
				<a href="{{ function('get_field', 'linkedin_url', post.ID) }}" target="_blank">linkeind url</a>
				<a href="{{ function('get_field', 'email_url', post.ID) }}" target="_blank">email url</a>
