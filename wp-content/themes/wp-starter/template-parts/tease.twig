<article class="tease h-full tease-{{ post.post_type }}" id="tease-{{ post.ID }}">
	{% block content %}
		<div class="flex flex-col h-full bg-gray-03 rounded-3xl">
			<div class="overflow-hidden aspect-w-16 aspect-h-9 rounded-3xl">
				{% if post.thumbnail %}
					<a href="{{ post.link }}" class="transition-all hover:opacity-70">
						<img loading="lazy" class="absolute inset-0 object-cover object-center w-full h-full" src="{{ post.thumbnail.src }}" srcset="{{ post.thumbnail.srcset }}" sizes="(max-width: 768px) 100vw, (max-width: 1024px) 500px" alt="{{ post.thumbnail.alt | default('Image') }}">
					</a>
				{% endif %}
			</div>
			<div class="flex flex-col p-5 space-y-4 grow">
				<div class="text-base">{{ post.post_date|date("M j, Y") }}</div>
				<h3 class="h4">
					<a href="{{ post.link }}">{{ post.title }}</a>
				</h3>
				<p class="body-1 grow">
					{{ post.excerpt.read_more(false) }}
				</p>
				<a href="{{ post.link }}" class="inline-block mt-5 btn-secondary">Read More</a>
			</div>
		</div>
	{% endblock %}
</article>
