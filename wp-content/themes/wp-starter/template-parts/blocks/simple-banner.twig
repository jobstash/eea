<section class="container px-6 md:px-12">
	<div class="px-4 py-8 lg:px-10 lg:py-12 bg-gray-03 rounded-xl">
		{% set title = fields.title ?? 'Simple Banner' %}
		{% set text = fields.text ?? '' %}
		<div class="flex flex-col gap-y-4 lg:flex-row lg:justify-between lg:gap-y-0 lg:items-center">
			<h2 class="h2 lg:w-5/12">{{ title }}</h2>
			<div class="lg:w-5/12 body-2">
				{{ text | raw }}
			</div>
		</div>
	</div>
</section>
