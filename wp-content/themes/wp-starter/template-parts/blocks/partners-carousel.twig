{% set bg_color = fields.bg_color %}
<div class="flex flex-col">
	<div class="flex flex-col bg-[#1C1D1F] py-6 gap-y-10 lg:gap-y-16 relative left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] w-screen">
		{% set logos = fields.logos %}
		{% if logos %}
			<div class="">
				<div id="partners" class="swiper js-partners-carousel">
					<div class="w-full swiper-wrapper">
						{% for i in 0..((logos|length * 2) - 1) %}
							{% set logo = logos[i % logos|length] %}
							{% set image = logo.image ? get_image(logo.image) : false %}

							<div class="swiper-slide !w-[140px]">
								{% if logo.partner_url %}
								<a href="{{logo.partner_url.url}}" class="hover:opacity-80">
								{% endif %}
								<div class="flex flex-col justify-center w-full h-[70px]">
									<img loading="lazy" class="absolute inset-0 block object-contain object-center w-full h-full grayscale" src="{{ image.src }}" srcset="{{ image.srcset }}" sizes="200px" alt="{{ image.alt | default('Icon') }}">
								</div>
								{% if logo.partner_url %}
								</a>
								{% endif %}
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		{% endif %}
	</div>

</div>
