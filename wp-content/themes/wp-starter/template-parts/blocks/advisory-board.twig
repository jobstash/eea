<section class="px-4 overflow-hidden">
	<div class="container px-4 py-10 md:px-12 gap-y-10">
		{% set title = fields.title ?? 'Investors Carousel' %}
		{% set members = fields.members %}

		<h2 class="text-center h2">{{ title }}</h2>

		{% if members %}
			<div class="w-screen mt-12 -ml-10 lg:mt-17 lg:w-auto lg:ml-0 xl:hidden">
				<div class="!px-8 swiper !overflow-visible js-members-carousel lg:!px-0">
					<div class="swiper-wrapper">
						{% for member in members %}
							{% set image = member.image ? get_image(member.image) : false %}
							{% set cta = member.linkedin_url %}
							<div class="swiper-slide">
								<div class="relative flex flex-col justify-end h-full p-5 pt-48 bg-gray-03 rounded-3xl">
									<div class="absolute top-0 right-0 flex-col -mt-6 -mr-4 overflow-hidden rounded-full
												{% if (loop.index - 1) % 3 == 0 or loop.index % 3 == 1 %} w-40 rounded-bl-none {% else %} w-52 {% endif %} h-52
									">
										<img loading="lazy" class="absolute inset-0 block object-cover object-center w-full h-full grayscale" src="{{ image.src }}" srcset="{{ image.srcset }}" sizes="(max-width: 768px) 100vw, (max-width: 1024px) 400px" alt="{{ image.alt | default('Background Image') }}">
									</div>
									<h2 class="pb-4 h3">{{member.name}}</h2>
									<div class="body-1 wysiwyg">{{member.description}}</div>
									{% if cta %}
										<a class="mt-4 btn-secondary" href="{{ cta.title }}" target="{{ cta.target }}">{{ cta.title }}</a>
									{% endif %}
								</div>
							</div>
						{% endfor %}
					</div>
					<div class="js-members-carousel-pagination hs-pagination"></div>
				</div>
			</div>
			<div class="hidden grid-cols-2 gap-4 xl:grid lg:mt-16">
				{% for member in members %}
					{% set image = member.image ? get_image(member.image) : false %}
					{% set cta = member.linkedin_url %}
					<div class="lg:flex lg:flex-wrap">
						<div class="relative flex justify-end h-full px-5 py-10  bg-gray-03 rounded-3xl w-full  lg:items-start
							{% if loop.index % 4 == 1 or loop.index % 4 == 2 %}  flex-row {% else %} flex-row-reverse {% endif %}
						">
							<div class="lg:w-1/2 {% if loop.index % 4 == 1 or loop.index % 4 == 2 %} lg:mr-10  {% else %} lg:ml-10  {% endif %}">
								<div class="relative overflow-hidden rounded-full
									{% if (loop.index - 1) % 3 == 0 or loop.index % 3 == 1 %} w-40 lg:w-auto lg:min-h-[460px] rounded-bl-none -mt-16 {% else %} -mt-16 w-[320px] h-[320px] lg:ml-auto{% endif %}
									{% if loop.index % 4 == 1 or loop.index % 4 == 2 %} lg:-ml-10  {% endif %}
									{% if loop.index % 4 == 0 or loop.index % 4 == 3  %} lg:-mr-10  {% endif %}
								">
									<img loading="lazy" class="absolute inset-0 block object-cover object-center w-full h-full grayscale" src="{{ image.src }}" srcset="{{ image.srcset }}" sizes="(max-width: 768px) 100vw, (max-width: 1024px) 400px" alt="{{ image.alt | default('Background Image') }}">
								</div>
								{% if loop.index == 2 or (loop.index - 2) % 4 == 0 %}
									<div class="flex ml-8 mt-14 gap-x-24">
										<svg width="49" height="49" viewbox="0 0 49 49" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M24.8025 0C37.9239 0 49 10.6064 49 23.9147C49 37.223 37.9527 48.2462 24.8025 48.2462C11.6523 48.2462 0 37.6398 0 23.9147C0 10.1896 11.2634 0 24.8025 0Z" fill="#FA6749"/>
										</svg>
										<svg width="49" height="49" viewbox="0 0 49 49" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M24.8025 0C37.9239 0 49 10.6064 49 23.9147C49 37.223 37.9527 48.2462 24.8025 48.2462C11.6523 48.2462 0 37.6398 0 23.9147C0 10.1896 11.2634 0 24.8025 0Z" fill="#FA6749"/>
										</svg>
									</div>
								{% endif %}

								{% if (loop.index - 3) % 4 == 0 %}
									<div class="flex flex-row-reverse items-end ml-auto mr-8 mt-14 gap-x-24">
										<svg width="49" height="49" viewbox="0 0 49 49" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M24.8025 0C37.9239 0 49 10.6064 49 23.9147C49 37.223 37.9527 48.2462 24.8025 48.2462C11.6523 48.2462 0 37.6398 0 23.9147C0 10.1896 11.2634 0 24.8025 0Z" fill="#4175E1"/>
										</svg>
										<svg width="49" height="49" viewbox="0 0 49 49" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M24.8025 0C37.9239 0 49 10.6064 49 23.9147C49 37.223 37.9527 48.2462 24.8025 48.2462C11.6523 48.2462 0 37.6398 0 23.9147C0 10.1896 11.2634 0 24.8025 0Z" fill="#4175E1"/>
										</svg>
									</div>
								{% endif %}

							</div>
							<div class="flex flex-col h-full lg:w-1/2">
								<h2 class="h3">{{member.name}}</h2>
								<div class="body-1 wysiwyg lg:pt-14 grow">{{member.description}}</div>
								{% if cta %}
									<a class="mt-4 btn-secondary" href="{{ cta.title }}" target="{{ cta.target }}">{{ cta.title }}</a>
								{% endif %}
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}
	</div>

</section>
