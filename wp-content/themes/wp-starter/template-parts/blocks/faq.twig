<div class="container px-6 md:px-">
	<div class="flex flex-col px-4">
		{% set title = fields.title ?? 'FAQ Accordion' %}
		{% set qas = fields.qas %}
		{% if qas %}
			<div class="flex flex-wrap mt-8 lg:mt-12">
				<div class="js-accordion-faq">
					{% for qa in qas %}
						<div class="pb-8 mb-8 border-b border-blue-01 last:border-none last:mb-0 last:pb-0">
							<h3 class="relative pl-10 cursor-pointer lg:pl-16 h4">
								<svg class="absolute top-0 left-0 transition-transform" width="31" height="31" viewBox="0 0 31 31" fill="none" xmlns="http://www.w3.org/2000/svg">
									<!-- Horizontal bar of the plus sign -->
									<path d="M31 15.4995L0.204098 15.4995" stroke="currentColor" stroke-width="1.5"></path>
									<!-- Vertical bar of the plus sign (will rotate) -->
									<path class="transition-transform duration-500 ease-in-out icon-vertical" d="M15.6016 0.102051V30.898" stroke="currentColor" stroke-width="1.5"></path>
								</svg>
								{{ qa.question }}
							</h3>

							<div class="pl-12 overflow-hidden transition-all duration-1000 ease-in-out opacity-0 faq-answer lg:pl-16 body-2">
								<div class="pt-4">
									{{ qa.answer }}
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		{% endif %}
	</div>
</div>
