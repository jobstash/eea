<section class="container px-4 md:px-8">
	<div class="flex flex-col">
		{% set title = fields.title ?? 'Security' %}
		{% set text = fields.text %}
		{% set items = fields.items %}
		<div class="px-4 mx-auto lg:w-10/12 lg:px-0">
			<h2 class="mx-auto lg:text-center h2 lg:w-8/12">{{ title }}</h2>
			{% if text|length %}
				<div class="pt-4 mx-auto text-center body-2 lg:w-7/12">
					{{ text | raw }}
				</div>
			{% endif %}
			{% if items %}
			
				{% set item_class = items|length <= 3 ? 'md:w-1/3' : 'md:w-1/4' %}
				<ul class="flex flex-wrap pt-20 -mx-8 md:-mx-10 items ">
					{% for item in items %}
						{% set anim = item.anim ?? ''%}
						<li class="w-full px-8 md:px-10 pt-20 item {{ item_class }} first:pt-0 md:pt-0">
							<div class="mb-7">
								<div class="w-[70px] md:h-[70px] flex justify-start align-items">
									{% if anim %}
										<div class="lottie" style="height: 100%; width: auto" data-lottie-animation='{{ anim | raw }}' data-lottie-loop="false" data-preserve-aspect-ratio="true" data-lottie-autoplay="true" data-lottie-speed="1"></div>
									{% endif %}
								</div>
							</div>
							<div class="">
								<h3 class="h4">{{ item.title }}</h3>
								<hr class="mt-5 mb-5 border-t-0 border-b border-blue-01">
								<p class="body-2">{{ item.text }}</p>
							</div>
						</li>
					{% endfor %}
				</ul>
			{% else %}
				<p>No items available.</p>
			{% endif %}
		</div>
	</div>
</section>
