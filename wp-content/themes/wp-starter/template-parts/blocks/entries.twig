<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
{% set entries = fields.entries %}
    {% if entries %}
        {% for post in entries %}
            {% include 'tease.twig' with {'post': post} %}
        {% endfor %}
    {% else %}
        <p>No posts selected.</p>
    {% endif %}
</div>