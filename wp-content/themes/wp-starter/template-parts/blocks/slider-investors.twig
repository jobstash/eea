<section class="px-4 overflow-hidden">
	<div class="container px-6 py-10 md:px-12 gap-y-10">
		{% set title = fields.title ?? 'Investors Carousel' %}
		{% set investors = fields.investors %}

		<h2 class="text-center h2">{{ title }}</h2>

		{% if investors %}
			<div class="relative w-screen mt-8 -ml-8 lg:mt-11 lg:w-auto lg:ml-0">
				<div class="absolute top-[50%] -mt-5 left-0 items-center justify-center hidden -ml-14 cursor-pointer js-investors-prev btn-primary lg:flex w-9 h-9">
					<svg class="rotate-180" width="11" height="19" viewbox="0 0 11 19" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M1 1.25L9.50341 9.18589C9.68934 9.35941 9.68934 9.64111 9.50341 9.81463L1 17.75" stroke="#F0F0F0" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round"/>
					</svg>
				</div>
				<div class="absolute top-[50%] -mt-5 right-0 items-center justify-center hidden -mr-14 cursor-pointer js-investors-next btn-primary lg:flex w-9 h-9">
					<svg width="11" height="19" viewbox="0 0 11 19" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M1 1.25L9.50341 9.18589C9.68934 9.35941 9.68934 9.64111 9.50341 9.81463L1 17.75" stroke="#F0F0F0" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round"/>
					</svg>
				</div>
				<div class="!px-8 swiper !overflow-visible lg:!overflow-hidden js-investors-carousel lg:!px-0">
					<div class="swiper-wrapper ">
						{% for investor in investors %}
							{% set image = investor.image ? get_image(investor.image) : false %}
							{% set image_type = investor.image_type %}
							{% set cta = investor.cta %}
							<div class="swiper-slide">
								<div class="relative flex flex-col justify-end h-full p-5 pt-64 space-y-5 overflow-hidden bg-gray-03 rounded-3xl lg:space-y-3">
									<div class="absolute top-0 right-0 flex-col w-56 h-56 -mt-12 -mr-12 bg-white rounded-full">
										{% if image_type == 1%}
											<div class="absolute bottom-0 left-0 flex items-center w-32 h-32 mb-8 ml-8">
												<img loading="lazy" class="block object-contain w-full" src="{{ image.src }}" alt="{{ image.alt | default('Background Image') }}">
											</div>
										{% else %}
											<div loading="lazy" class="absolute top-0 left-0 flex items-center w-56 h-56 overflow-hidden rounded-full">
												<img class="block object-cover w-full h-full" src="{{ image.src }}" alt="{{ image.alt | default('Background Image') }}">
											</div>
										{% endif %}
									</div>
									<h2 class="h3">{{investor.title}}</h2>
									<div class="body-3">{{investor.text}}</div>
									{% if cta %}
										<a href="{{ cta.url }}" target="{{ cta.target }}" class="inline-block lg:p-1.5 btn-secondary">{{ cta.title }}</a>
									{% endif %}
								</div>
							</div>
						{% endfor %}
					</div>
					<div class="js-investors-carousel-pagination hs-pagination"></div>
				</div>
			</div>
		{% endif %}
	</div>

</section>
