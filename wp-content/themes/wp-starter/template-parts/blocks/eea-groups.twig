{% set eea_groups = fields.eea_group %}

{% if eea_groups %}
	<div class="grid grid-cols-1 gap-12 lg:grid-cols-3">
		{% for group in eea_groups %}
			<div>
				<div class="p-6 pb-0 border eea-group bg-black/25 border-white/30">
					{% if group.title %}
						<h2 class="font-bold text-white h5">{{ group.title }}<div class="w-[64px] h-[3px] my-6 bg-white"></div>
						</h2>
					{% endif %}

					{% if group.text %}
						<p class="text-white/80 text-base leading-[200%]">{{ group.text }}</p>
					{% endif %}

					{% if group.link %}
						<a href="{{ group.link.url }}" class="w-full mt-6 btn-secondary">{{group.link.title}}<svg class="ml-2" width="17" height="17" viewbox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" clip-rule="evenodd" d="M4.75 0.25L16 0.25C16.1989 0.25 16.3897 0.329018 16.5303 0.46967C16.671 0.610322 16.75 0.801088 16.75 1V12.25C16.75 12.6642 16.4142 13 16 13C15.5858 13 15.25 12.6642 15.25 12.25V2.81066L1.53033 16.5303C1.23744 16.8232 0.762563 16.8232 0.46967 16.5303C0.176777 16.2374 0.176777 15.7626 0.46967 15.4697L14.1893 1.75L4.75 1.75C4.33579 1.75 4 1.41421 4 1C4 0.585787 4.33579 0.25 4.75 0.25Z" fill="white"/>
							</svg>
						</a>
					{% endif %}

					{% set members = group.member %}
					{% if members %}
						<div class="mt-8 members">
							<ul>
								{% for member in members %}
									<li class="py-6 space-y-4 border-t border-white/50 text-white/80">
										<p class="text-white h5">
											{{ member.name }}</p>
										<p class="text-white/80">
											{{ member.position }}</p>
										{% if member.email %}
											<p>
												<a href="mailto:{{ member.email }}" class="inline-flex items-center underline">
													<svg class="mr-4" width="37" height="36" viewbox="0 0 37 36" fill="none" xmlns="http://www.w3.org/2000/svg">
														<rect x="0.5" width="36" height="36" rx="18" fill="#252525"/>
														<path fill-rule="evenodd" clip-rule="evenodd" d="M12.5563 13.8979C12.6735 13.5138 13.0307 13.2344 13.4532 13.2344H23.9532C24.3757 13.2344 24.7328 13.5138 24.85 13.8979L18.7032 17.9958L12.5563 13.8979ZM11.3907 14.1616C11.3906 14.1676 11.3906 14.1736 11.3907 14.1796V21.6719C11.3907 22.811 12.3141 23.7344 13.4532 23.7344H23.9532C25.0923 23.7344 26.0157 22.811 26.0157 21.6719V14.1796M24.8907 15.2229V21.6719C24.8907 22.1896 24.471 22.6094 23.9532 22.6094H13.4532C12.9354 22.6094 12.5157 22.1896 12.5157 21.6719V15.2229L18.3912 19.1399C18.5801 19.2659 18.8263 19.2659 19.0152 19.1399L24.8907 15.2229ZM26.0157 14.1616C26.0101 13.0272 25.0888 12.1094 23.9532 12.1094H13.4532C12.3175 12.1094 11.3963 13.0272 11.3907 14.1616" fill="white"/>
													</svg>
													{{ member.email }}
												</a>
											</p>
										{% endif %}
									</li>
								{% endfor %}
							</ul>
						</div>
					{% endif %}
				</div>
			</div>
		{% endfor %}
	</div>
{% endif %}
