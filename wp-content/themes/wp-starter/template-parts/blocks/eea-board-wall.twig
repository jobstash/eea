
<div class="flex flex-col">
	<div class="flex flex-col py-6 gap-y-10 lg:gap-y-16">
		{% set logos = fields.eea_board_members %}
		{% if logos %}
			<div class="">
				<div>
					<div class="flex">
						{% for i in logos %}
                            {% set image = i.logo ? get_image(i.logo) : false %}
							<div class="">
								<div class="">
									<img loading="lazy" class="" src="{{ image.src }}" srcset="{{ image.srcset }}" sizes="200px" alt="{{ image.alt | default('Icon') }}">
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		{% endif %}
	</div>

</div>
